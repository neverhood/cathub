<%= page_header t('auth.sign_in') %>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('auth.sign_in'), data: { disable_with: t('common.please_wait') } %>
  </div>
<% end %>

<div>
  <div><%= link_to t('auth.vk'), user_omniauth_authorize_path(:vkontakte) %></div>
  <div><%= link_to t('auth.facebook'), user_omniauth_authorize_path(:facebook) %></div>
</div>

<hr />

<div>
  <div><%= link_to t('auth.sign_up'), new_user_registration_path %></div>
  <div><%= link_to t('auth.forgot_password?'), new_user_password_path %></div>
</div>

