<%= page_header %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :name,  required: true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('auth.sign_up'), class: 'btn-success', data: { disable_with: t('auth.sign_up') } %>
  </div>
<% end %>

<div id='vk-auth-container'><%= link_to t('auth.vk'), user_omniauth_authorize_path(:vkontakte), class: 'btn btn-info' %></div>
<div id='fb-auth-container'><%= link_to t('auth.facebook'), user_omniauth_authorize_path(:facebook), class: 'btn btn-info' %></div>

<hr />

<div>
  <div><%= link_to t('auth.sign_in'), new_user_session_path %></div>
  <div><%= link_to t('auth.forgot_password?'), new_user_password_path %></div>
</div>

